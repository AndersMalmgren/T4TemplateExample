@using System.Web.Optimization
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>T4 Typed DTO Contract Example</title>
        @Styles.Render("~/bundles/css")
        <style>
            body {
                padding-top: 50px;
            }
            .starter-template {
                padding: 40px 15px;
                text-align: center;
            }
        </style>
    </head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Static typed contracts with T4 templates</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="#">Home</a></li>
           </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <div class="container">

        <div class="starter-template">
            <form class="form-inline">
                <div class="form-group">
                    <label class="sr-only" for="bar">bar</label>
                    <input data-name="bar" data-bind="valueUpdate: 'afterkeydown'" type="text" class="form-control" id="bar" placeholder="Enter something">
                </div>
                <button data-name="getFooBars" class="btn btn-default" type="submit">Get FooBars</button>
            </form>
        </div>
        <ul data-name="fooBars">
            <li data-name="random"></li>
        </ul>

    </div><!-- /.container -->

    @Scripts.Render("~/bundles/vendor")
    @Scripts.Render("~/bundles/app")
</body>
</html>
